@{
  Layout = "_Layout";
}

@using Music_Organizer.Models;
@model List<Music_Organizer.Models.Artist>;

<h1>Artists</h1>
<br>
<br>
@if (@Model.Count == 0)
{
  <h3>No Artists have been added yet!</h3>
} 

@foreach (Artist artist in Model)
{
  <li>@Html.ActionLink($"{artist.Name}", "Details", new { id = artist.ArtistId })</li>
}
<br>
<br>
<br>
<p>@Html.ActionLink("Add New Artist", "Create")</p>
<p>@Html.ActionLink("Add New Album", "Create", "Albums")</p>
<p>@Html.ActionLink("Show All Albums", "Index", "Albums")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>