@{
  Layout = "_Layout";
}

@using Music_Organizer.Models;

<h1>Albums</h1>

@if (@Model.Count == 0)
{
  <h3>No Albums have been added yet!</h3>
} 

<ul>
  @foreach(Album album in Model)
  {
    <li>@Html.ActionLink($"{album.Name}", "Details", new { id = album.AlbumId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Album", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>