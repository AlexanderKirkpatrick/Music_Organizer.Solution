@{
  Layout = "_Layout";
}

@using Music_Organizer.Models
@model Music_Organizer.Models.Album;

<h2>Album Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This Album does not contain any artists</p>
}
else
{
  <h4>The album's artist:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li><a href=/Artists/Details/@join.Artist.ArtistId>@join.Artist.Name</a></li>
  }
  </ul>
  <br>
  <h4>Mediums the album are on:</h4>
  <ul>
  @foreach(var join in Model.JoinMediumAlbum)
  {
    <li><a href=/Mediums/Details/@join.Medium.MediumId>@join.Medium.Name</a></li>
  }
  </ul>
}
<p>@Html.ActionLink("Add a Medium", "AddMedium", new { id = Model.AlbumId })</p>
<p>@Html.ActionLink("Back to Albums", "Index")</p>
<p>@Html.ActionLink("Edit Album", "Edit", new { id = Model.AlbumId })</p>
<p>@Html.ActionLink("Delete Album", "Delete", new { id = Model.AlbumId })</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
